---
import { cn } from '@/utils'

const { class: className, title } = Astro.props
---

<section class={cn(className, 'flex flex-col gap-y-5 md:flex-row md:gap-y-0 md:gap-x-6')}>
	<div class='text-xl font-semibold md:w-1/4 lg:w-1/5'>
		<h2>{title}</h2>
	</div>
	<div class='flex flex-col gap-y-3 md:w-3/4 lg:w-4/5'>
		<slot />
	</div>
</section>
